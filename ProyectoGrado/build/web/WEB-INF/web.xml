<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>403</error-code>
        <location>/permiso_denegado.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>docentefaces</display-name>
        <web-resource-collection>
            <web-resource-name>folderdoc</web-resource-name>
            <description/>
            <url-pattern>/faces/fechas_seguimiento/*</url-pattern>
            <url-pattern>/faces/index_docentes.xhtml</url-pattern>
            <url-pattern>/faces/actividades/*</url-pattern>
            <url-pattern>/faces/productos/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>folderclase</web-resource-name>
            <description/>
            <url-pattern>/faces/clases/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>docente</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>adminfaces</display-name>
        <web-resource-collection>
            <web-resource-name>index</web-resource-name>
            <description/>
            <url-pattern>/faces/index_admin.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>convenciones</web-resource-name>
            <description/>
            <url-pattern>/faces/convenciones/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>docentes</web-resource-name>
            <description/>
            <url-pattern>/faces/docentes/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>horas</web-resource-name>
            <description/>
            <url-pattern>/faces/horas/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>tipo_modal</web-resource-name>
            <description/>
            <url-pattern>/faces/tipo_mdalidad/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>administrador</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>evafaces</display-name>
        <web-resource-collection>
            <web-resource-name>foldereva</web-resource-name>
            <description/>
            <url-pattern>/faces/evaluaciones/*</url-pattern>
            <url-pattern>/faces/index_evaluador.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>evaluador</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>proyectoRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/index.xhtml</form-login-page>
            <form-error-page>/faces/index.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>docente</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>administrador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>evaluador</role-name>
    </security-role>
    
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>south-street</param-value>
    </context-param>
</web-app>
